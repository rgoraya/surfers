.container-fluid.padding-0.bg-goalie
  .container.color-ghost-white.margin-bottom-20
    .row.padding-vertical-20
      .padding-20
        %h1.font-40.font-light.margin-top-20
          Register for Surfer's #{@tournament.name}

    %form.form-horizontal.padding-vertical-20#tournament_register_form{:'data-tournament-id' => "#{@tournament.id}"}
      .row.bg-shadow.position-relative
        .bottom-dark-border.hidden-sm.hidden-xs
        .middle-dark-border.hidden-sm.hidden-xs
        .col-sm-6.padding-30
          %h4.font-26.margin-bottom-30 Team Information
          .form-group.has-feedback{:'data-form-section' => "team"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "teamName"} Team
            .col-sm-7
              %input#teamName.form-control{:type => "text", :placeholder => "Team Name", :name => "name", :'data-required' => 'true', :'data-error-after' => "name"}
              %i.glyphicon.form-control-feedback.glyphicon.glyphicon-asterisk.font-12.text-muted
          .form-group{:'data-form-section' => "team"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "teamUniform"} Uniform Color
            .col-sm-7
              %input#teamUniform.form-control{:type => "text", :name => "uniform_color", :placeholder => "Team Uniform Color", :'data-error-after' => "uniform_color"}
          .form-group.has-feedback{:'data-form-section' => "team_captain"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "captainName"} Captain
            .col-sm-7
              %input#captainName.form-control{:type => "text", :placeholder => "Name", :name => "name", :'data-required' => 'true', :'data-error-after' => "name"}
              %i.glyphicon.form-control-feedback.glyphicon.glyphicon-asterisk.font-12.text-muted
          .form-group.has-feedback{:'data-form-section' => "team_captain"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "captainPhone"} Phone Number
            .col-sm-7
              %input#captainPhone.form-control.bfh-phone{:type => "text", :placeholder => "Team Captain's Phone", :name => "phone_number", :'data-country' => "US", :'data-required' => 'true', :'data-error-after' => "phone_number"}
              %i.glyphicon.form-control-feedback.glyphicon.glyphicon-asterisk.font-12.text-muted
          .form-group.has-feedback{:'data-form-section' => "division"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "division"} Division
            .col-sm-7
              - @tournament.divisions.each do |division|
                %label.checkbox-inline.font-18
                  %input{:type => "checkbox", :value => "competitive", :name => "#{division.name}", :id => "#{division.name}" }
                    #{division.name}
              %i.glyphicon.form-control-feedback.glyphicon.glyphicon-asterisk.font-12.text-muted{:'data-error-after' => "division"}
          %p.text-right.text-warning.font-14
            %i.glyphicon.glyphicon-info-sign
            Fees:
            - @tournament.divisions.each do |division|
              %span $#{division.fee.to_s} #{division.name}

        .col-sm-6.padding-30
          %h4.font-26.margin-bottom-30 Team Staff
          .form-group.has-feedback{:'data-form-section' => "team_manager"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "teamManagerName"} Team Manager
            .col-sm-7
              %input#teamManagerName.form-control{:type => "text", :placeholder => "Name", :name => "name", :'data-required' => 'true', :'data-error-after' => "name"}
              %i.glyphicon.form-control-feedback.glyphicon.glyphicon-asterisk.font-12.text-muted
          .form-group{:'data-form-section' => "team_manager"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "teamManagerAddress"} Address
            .col-sm-7
              %input#teamManagerAddress.form-control{:type => "text", :name => "address", :placeholder => "Team Manager's Address", :'data-error-after' => "address"}
          .form-group.has-feedback{:'data-form-section' => "team_manager"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "teamManagerPhone"}
              Phone Number
            .col-sm-7
              %input#teamManagerPhone.form-control.bfh-phone{ :type => "text", :placeholder => "Team Manager's Phone", :name => "phone_number", :'data-country' => "US", :'data-required' => 'true', :'data-error-after' => "phone_number"}
              %i.glyphicon.form-control-feedback.glyphicon.glyphicon-asterisk.font-12.text-muted
          .form-group.has-feedback{:'data-form-section' => "team_manager"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "teamManagerAddress"} Email
            .col-sm-7
              %input#teamManagerEmail.form-control{:type => "email", :name => "email", :placeholder => "Team Manager's Email", :'data-required' => 'true', :'data-error-after' => "email"}
              %i.glyphicon.form-control-feedback.glyphicon.glyphicon-asterisk.font-12.text-muted
          %p.text-right.text-warning.font-14
            %i.glyphicon.glyphicon-info-sign
            We'll send the confirmation on Team Manager's Email
          .form-group{:'data-form-section' => "team_voluntary_umpire"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "umpireName"} Voluntary Umpire
            .col-sm-7
              %input#umpireName.form-control{:type => "text", :placeholder => "Name", :name => "name", :'data-error-after' => "name"}
          .form-group{:'data-form-section' => "team_voluntary_umpire"}
            %label.col-sm-5.control-label.font-light.font-18{:for => "umpirePhone"} Phone Number
            .col-sm-7
              %input#umpirePhone.form-control.bfh-phone{:type => "text", :placeholder => "Voluntary Umpire's Phone", :name => "phone_number", :'data-country' => "US", :'data-error-after' => "phone_number"}

      .row.bg-shadow.padding-vertical-30.padding-horizontal-15.position-relative
        .bottom-dark-border.hidden-sm.hidden-xs
        %h4.font-26.margin-bottom-30.padding-left-15 Player Information
        .col-sm-4
          .form-group{:'data-form-section' => "team_players"}
            %label.col-sm-4.control-label.font-light.font-18{:for => "player1"} Player 1
            .col-sm-8
              %input#player1.form-control{:type => "text", :placeholder => "Name", :name => "player_1"}
          .form-group{:'data-form-section' => "team_players"}
