            %label.col-sm-4.control-label.font-light.font-18{:for => "player5"} Player 5
            .col-sm-8
              %input#player5.form-control{:type => "text", :placeholder => "Name", :name => "player_5"}
          .form-group{:'data-form-section' => "team_players"}
            %label.col-sm-4.control-label.font-light.font-18{:for => "player6"} Player 6
            .col-sm-8
              %input#player6.form-control{:type => "text", :placeholder => "Name", :name => "player_6"}
          .form-group{:'data-form-section' => "team_players"}
            %label.col-sm-4.control-label.font-light.font-18{:for => "player7"} Player 7
            .col-sm-8
              %input#player7.form-control{:type => "text", :placeholder => "Name", :name => "player_7"}
          .form-group{:'data-form-section' => "team_players"}
            %label.col-sm-4.control-label.font-light.font-18{:for => "player8"} Player 8
            .col-sm-8
              %input#player8.form-control{:type => "text", :placeholder => "Name", :name => "player_8"}

        .col-sm-4
          .form-group{:'data-form-section' => "team_players"}
            %label.col-sm-4.control-label.font-light.font-18{:for => "player9"} Player 9
            .col-sm-8
              %input#player9.form-control{:type => "text", :placeholder => "Name", :name => "player_9"}
          .form-group{:'data-form-section' => "team_players"}
            %label.col-sm-4.control-label.font-light.font-18{:for => "player10"} Player 10
            .col-sm-8
              %input#player10.form-control{:type => "text", :placeholder => "Name", :name => "player_10"}
          .form-group{:'data-form-section' => "team_players"}
            %label.col-sm-4.control-label.font-light.font-18{:for => "player11"} Player 11
            .col-sm-8
              %input#player11.form-control{:type => "text", :placeholder => "Name", :name => "player_11"}

      .row.bg-shadow.padding-30.clearfix
        .col-sm-6.col-md-8
          %p.text-warning.font-20.margin-top-10
            %i.glyphicon.glyphicon.glyphicon-asterisk.font-14
            Required Fields
        .col-sm-6.text-right.col-md-4
          #errorNotice.collapse
            %p.text-danger.font-20.margin-top-10
              %i.glyphicon.glyphicon-exclamation-sign
              Please fix errors above
          %button#submitTournamentRegistration.btn.btn-success.btn-lg{:type => "submit"} Register Team
        .col-sm-12
          %p.font-light.font-20.margin-top-30
            Note: Please make fees payable to HBFHC and mail it to HBFHC, 1195 Via Blairo Circle, Corona, CA 92879.
            For additional information, please #{link_to "Contact us", contact_url}.
