.navigation.pull-left.margin-right-20
  .well.padding-10.margin-top-20
    %ul.nav-members.unstyled.font-15.panel.margin-bottom-10
      = nav_link 'About us', about_path
      = nav_link 'Contacts', contact_path
      = nav_link 'History of the game', history_path

    .promo.margin-bottom-10
      %a.btn.btn-info.padding-10.text-center{ :href => tournament_path }
        %i.icon-fire.icon-white
        Surfers Field Hockey Annual 6X6 Tournament 2013
      %a.btn.btn-info.padding-10.margin-top-10{"data-toggle" => "modal", :href => "#tournamentFeedbackModal", :role => "button"}
        %i.icon-comment.icon-white
        Tournament 2013 feedback

    - sponsors = Sponsor.find(:all)
    - if !sponsors.nil?
      %ul.links.panel.unstyled.margin-bottom-10
        .header.dark.padding-10
          %i.icon-briefcase
          Our sponsors
        - sponsors.each do |l|
          %li.padding-10
            %a{:href => l.link_href, :target => "_blank"}
              = l.link_text

    - links = HelpfulLink.find(:all)
    - if !links.nil?
      %ul.links.panel.unstyled.margin-bottom-0
        .header.dark.padding-10
          %i.icon-share
          Useful Hockey sites
        - links.each do |l|
          %li.padding-10
            %a{:href => l.link_href, :target => "_blank"}
              = l.link_text

  = render :partial => "tournament_feedbacks/tournament_feedback_modal_form"