.navigation.pull-left.margin-right-20
  .well.padding-10.margin-top-20
    %ul.nav-members.list-unstyled.font-15.panel.margin-bottom-10
      = nav_link 'About us', about_path
      = nav_link 'Contacts', contact_path
      //= nav_link 'Events', events_path
      = nav_link 'History of the game', history_path

    -#.promo.margin-bottom-10
