    - sponsors = Sponsor.find(:all)
    - if !sponsors.nil?
      %ul.links.panel.list-unstyled.margin-bottom-10
        .header.dark.padding-10
          %i.icon-briefcase
          Our sponsors
        - sponsors.each do |l|
          %li.padding-10
            %a{:href => l.link_href, :target => "_blank"}
              = l.link_text

    - links = HelpfulLink.find(:all)
    - if !links.nil?
      %ul.links.panel.list-unstyled.margin-bottom-0
        .header.dark.padding-10
          %i.icon-share
          Useful Hockey sites
        - links.each do |l|
          %li.padding-10
            %a{:href => l.link_href, :target => "_blank"}
              = l.link_text

  = render :partial => "tournament_feedbacks/tournament_feedback_modal_form"